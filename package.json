{
  "name": "monorepo",
  "version": "0.0.19",
  "description": "Nestjs monorepo",
  "workspaces": {
    "packages": [
      "./apps/student-api",
      "./libs/*",
      "./tools/eslint"
    ]
  },
  "author": {
    "name": "Mike Lima",
    "email": "mike.rodrigues.lima@gmail.com"
  },
  "homepage": "https://github.com/mikemajesty/nestjs-monorepo#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemajesty/nestjs-monorepo.git"
  },
  "engines": {
    "node": ">=14 <=15"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "nest build",
    "monorepo:install": "yarn && yarn workspace @tools/eslint.config install && yarn workspace @libs/modules install && yarn workspace @libs/utils install && yarn workspace @libs/core install && yarn workspace @app/student.api install && yarn --cwd apps/student-client install",
    "format": "prettier --write \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" ",
    "lint": "yarn format && eslint \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./jest.config.e2e.ts",
    "commit": "cz",
    "start:student-api:dev": "nest start @app/student-api --debug 0.0.0.0:5870 --watch",
    "start:student-client": "yarn --cwd \"apps/student-client\" start",
    "start:student-api:prd": "node dist/apps/student-api/main.js",
    "tag:production": "changelog generate && cd devops && bash ./tag-create.sh && cd .."
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.3",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^10.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/typeorm": "^8.0.2",
    "apollo-server-express": "^3.6.3",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "graphql": "^15.8.0",
    "graphql-tools": "^8.2.0",
    "mysql2": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.38",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}